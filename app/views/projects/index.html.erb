<div class="container">
    <div class="row">
      <h2 class="card-panel  z-depth-4" align="center">Proyectos activos</h2>
      <br><br>
      <%@projects.each do |project|%>
        <%#next if project.visibility==0%>
        <div class="col s12 m6 l6">
          <div class="card  z-depth-2">
            <div class="card-image waves-effect waves-block waves-light">
              <%=link_to image_tag("im1.png"),image_path("im1.png")%>
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%=project.title%><i class="material-icons right">more_vert</i></span>
              <p><%=project.description%></p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%=project.title%><i class="material-icons right">close</i></span>
              <p><%=project.description%></p>
            </div>
          </div>
        </div>
      <%end%>
      <%if @projects.count == 0%>
      	<h4 class="card-panel  z-depth-4" align="center">No hay proyectos disponibles</h4>
      <%end%>  

    </div>
  </div>
	<div class="fixed-action-btn horizontal click-to-toggle" style="bottom: 45px; right: 24px;">
